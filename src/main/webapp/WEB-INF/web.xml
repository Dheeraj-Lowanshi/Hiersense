<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>hiresenseapp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>hiersenseapp.dbutil.AppInitializer</listener-class>
  </listener>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/hiersense_db</param-value>
  </context-param>
  <context-param>
    <param-name>username</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>abcd</param-value>
  </context-param>
  <context-param>
    <param-name>appName</param-name>
    <param-value>HierSense</param-value>
  </context-param>
  <servlet>
	  <servlet-name>SendRegisterOTPServlet</servlet-name>
	  <servlet-class>hiresenseapp.controllers.SendRegisterOTPServlet</servlet-class>	  
  </servlet>
  <servlet-mapping>
	  <servlet-name>SendRegisterOTPServlet</servlet-name>
	  <url-pattern>/SendRegisterOTPServlet</url-pattern>	  
  </servlet-mapping>
  <servlet>
	  <servlet-name>VerifyRegisterOTPServlet</servlet-name>
	  <servlet-class>hiresenseapp.controllers.VerifyRegisterOTPServlet</servlet-class>	  
  </servlet>
  <servlet-mapping>
	  <servlet-name>VerifyRegisterOTPServlet</servlet-name>
	  <url-pattern>/VerifyRegisterOTPServlet</url-pattern>	  
  </servlet-mapping>
  
  <servlet>
	  <servlet-name>LoginServlet</servlet-name>
	  <servlet-class>hiresenseapp.controllers.LoginServlet</servlet-class>	  
  </servlet>
  <servlet-mapping>
	  <servlet-name>LoginServlet</servlet-name>
	  <url-pattern>/LoginServlet</url-pattern>	  
  </servlet-mapping>
  
  <servlet>
	  <servlet-name>EmployerDashboardServlet</servlet-name>
	  <servlet-class>hiresenseapp.controllers.EmployerDashboardServlet</servlet-class>	  
  </servlet>
  <servlet-mapping>
	  <servlet-name>EmployerDashboardServlet</servlet-name>
	  <url-pattern>/EmployerDashboardServlet</url-pattern>	  
  </servlet-mapping>
  
  <servlet>
	  <servlet-name>PostJobServlet</servlet-name>
	  <servlet-class>hiresenseapp.controllers.PostJobServlet</servlet-class>	  
  </servlet>
  <servlet-mapping>
	  <servlet-name>PostJobServlet</servlet-name>
	  <url-pattern>/PostJobServlet</url-pattern>	  
  </servlet-mapping>
</web-app>